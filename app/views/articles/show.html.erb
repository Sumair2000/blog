<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li style="color: blue"><%= link_to "Edit", edit_article_path(@article) %></li>
  <li style="color: red"><%= link_to "Delete", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>

<h2 style="color: blue">Comments</h2>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to "Back", root_path%>
